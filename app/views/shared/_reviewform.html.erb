<%= form_with(model: [@movie, @review], local: true) do |f| %>

  <%= f.label :stars %>
  <% Review::STARS.each do |s| %>
    <span class="star">
      <%= f.radio_button :stars, s %>
      <%= label_tag s %>
    </span>
  <% end %>
  
  <%= f.label :comment %>
  <%= f.text_area :comment, placeholder: "Leave a comment"%>

  <%= f.submit %>

<% end %>